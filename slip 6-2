import java.util.Scanner;

abstract class Order {
    int id;
    String description;

    abstract void accept(Scanner sc);
    abstract void display();
}

class PurchaseOrder extends Order {
    String customerName;

    void accept(Scanner sc) {
        try {
            id = Integer.parseInt(sc.nextLine().trim());
            description = sc.nextLine();
            customerName = sc.nextLine();
        } catch (NumberFormatException e) {
            System.out.println("Invalid input for ID. Please enter a valid number.");
        }
    }

    void display() {
        System.out.println("Purchase Order ID: " + id);
        System.out.println("Description: " + description);
        System.out.println("Customer Name: " + customerName);
    }
}

class SalesOrder extends Order {
    String vendorName;

    void accept(Scanner sc) {
        try {
            id = Integer.parseInt(sc.nextLine().trim());
            description = sc.nextLine();
            vendorName = sc.nextLine();
        } catch (NumberFormatException e) {
            System.out.println("Invalid input for ID. Please enter a valid number.");
        }
    }

    void display() {
        System.out.println("Sales Order ID: " + id);
        System.out.println("Description: " + description);
        System.out.println("Vendor Name: " + vendorName);
    }
}

public class TestOrders {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        PurchaseOrder[] pOrders = new PurchaseOrder[3];
        SalesOrder[] sOrders = new SalesOrder[3];

        System.out.println("Enter 3 Purchase Orders (ID, Description, Customer Name):");
        for (int i = 0; i < 3; i++) {
            pOrders[i] = new PurchaseOrder();
            pOrders[i].accept(sc);
        }

        System.out.println("Enter 3 Sales Orders (ID, Description, Vendor Name):");
        for (int i = 0; i < 3; i++) {
            sOrders[i] = new SalesOrder();
            sOrders[i].accept(sc);
        }

        System.out.println("\n--- Purchase Orders ---");
        for (PurchaseOrder po : pOrders) {
            po.display();
            System.out.println();
        }

        System.out.println("--- Sales Orders ---");
        for (SalesOrder so : sOrders) {
            so.display();
            System.out.println();
        }

        sc.close();
    }
}
